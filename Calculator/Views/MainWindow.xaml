<Window x:Class="Calculator.Views.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:vms="clr-namespace:Calculator.ViewModels"
		mc:Ignorable="d"
		Title="Calculator"
		Height="321"
		Width="523"
		ResizeMode="CanMinimize"
		WindowStartupLocation="CenterScreen">
	<Window.DataContext>
		<vms:MainViewModel />
	</Window.DataContext>
	<Window.Resources>

		<Style TargetType="{x:Type Button}">
			<Setter Property="Background"
					Value="#DDDDDD" />
			<Setter Property="Margin"
					Value="1" />
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="{x:Type Button}">
						<Border Background="{TemplateBinding Background}">
							<ContentPresenter HorizontalAlignment="Center"
											  VerticalAlignment="Center" />
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
			<Style.Triggers>
				<Trigger Property="IsMouseOver"
						 Value="True">
					<Setter Property="Background"
							Value="#AAAAAA" />
				</Trigger>
				<Trigger Property="IsPressed"
						 Value="True">
					<Setter Property="Background"
							Value="#888888" />
				</Trigger>
			</Style.Triggers>
		</Style>



	</Window.Resources>

	<!-- Outer grid -->
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="2*" />
			<RowDefinition Height="6*" />
		</Grid.RowDefinitions>


		<!-- Output -->
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="2*" />
				<RowDefinition Height="5*" />
			</Grid.RowDefinitions>

			<TextBlock Grid.Row="0"
					   Text="Expression"
					   TextAlignment="Right"
					   Margin="0,0,10,0" />
			<TextBlock Grid.Row="1"
					   Text="Result"
					   TextAlignment="Right"
					   VerticalAlignment="Bottom"
					   FontSize="36"
					   FontFamily="Century Gothic"
					   Margin="0,0,10,0" />
		</Grid>


		<!-- The main buttons -->
		<Grid Background="#DDDDDD"
			  Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="*" />
				<RowDefinition Height="*" />
				<RowDefinition Height="*" />
				<RowDefinition Height="*" />
				<RowDefinition Height="*" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>

			<!-- RIGHT MAIN BUTTONS -->
			<Button Grid.Column="4"
					Grid.Row="0"
					Content="π" />
			<Button Grid.Column="5"
					Grid.Row="0"
					Content="&lt;--" />
			<Button Grid.Column="6"
					Grid.Row="0"
					Content="--&gt;" />
			<Button Grid.Column="7"
					Grid.Row="0"
					Content="(" />
			<Button Grid.Column="8"
					Grid.Row="0"
					Content=")" />
			<Button Grid.Column="4"
					Grid.Row="1"
					Content="e"
					FontStyle="Italic" />
			<Button Grid.Column="5"
					Grid.Row="1"
					Content="," />
			<Button Grid.Column="6"
					Grid.Row="1"
					Content="E" />
			<Button Grid.Column="7"
					Grid.Row="1"
					Content="^" />
			<Button Grid.Column="8"
					Grid.Row="1"
					Content="%" />
			<Button Grid.Column="4"
					Grid.Row="2"
					Content="7" />
			<Button Grid.Column="5"
					Grid.Row="2"
					Content="8" />
			<Button Grid.Column="6"
					Grid.Row="2"
					Content="9" />
			<Button Grid.Column="7"
					Grid.Row="2"
					Content="/" />
			<Button Grid.Column="8"
					Grid.Row="2"
					Content="ANS" />
			<Button Grid.Column="4"
					Grid.Row="3"
					Content="4" />
			<Button Grid.Column="5"
					Grid.Row="3"
					Content="5" />
			<Button Grid.Column="6"
					Grid.Row="3"
					Content="6" />
			<Button Grid.Column="7"
					Grid.Row="3"
					Content="*" />
			<Button Grid.Column="8"
					Grid.Row="3"
					Content="DEL" />
			<Button Grid.Column="4"
					Grid.Row="4"
					Content="1" />
			<Button Grid.Column="5"
					Grid.Row="4"
					Content="2" />
			<Button Grid.Column="6"
					Grid.Row="4"
					Content="3" />
			<Button Grid.Column="7"
					Grid.Row="4"
					Content="-" />
			<Button Grid.Column="8"
					Grid.Row="4"
					Content="="
					Grid.RowSpan="2" />
			<Button Grid.Column="4"
					Grid.Row="5"
					Content="0" />
			<Button Grid.Column="5"
					Grid.Row="5"
					Content="." />
			<Button Grid.Column="6"
					Grid.Row="5"
					Content="(-)" />
			<Button Grid.Column="7"
					Grid.Row="5"
					Content="+" />





			<!-- PSEUDO TABCONTROL HEADER -->

			<Grid Grid.Row="1" Grid.Column="0" ColumnSpan="4">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>

				<Button Grid.Column="0"
						Content="CUTS" />
				<Button Grid.Column="1"
						Content="UNARY" />
				<Button Grid.Column="2"
						Content="POLYADIC" />
			</Grid>


			<!-- UNARY BUTTONS -->
			<Button Grid.Column="0"
					Grid.Row="2"
					Content="sin" />
			<Button Grid.Column="1"
					Grid.Row="2"
					Content="cos" />
			<Button Grid.Column="2"
					Grid.Row="2"
					Content="tan" />
			<Button Grid.Column="0"
					Grid.Row="3"
					Content="asin" />
			<Button Grid.Column="1"
					Grid.Row="3"
					Content="acos" />
			<Button Grid.Column="2"
					Grid.Row="3"
					Content="atan" />
			<Button Grid.Column="0"
					Grid.Row="4"
					Content="abs" />
			<Button Grid.Column="1"
					Grid.Row="4"
					Content="floor" />
			<Button Grid.Column="2"
					Grid.Row="4"
					Content="frac" />
			<Button Grid.Column="0"
					Grid.Row="5"
					Content="sqrt" />
			<Button Grid.Column="1"
					Grid.Row="5"
					Content="fact" />
			<Button Grid.Column="2"
					Grid.Row="5"
					Content="exp" />
			<Button Grid.Column="3"
					Grid.Row="5"
					Content="ln" />

			<!-- POLYADIC -->
			<Button Grid.Column="0"
					Grid.Row="2"
					Content="log" />
			<Button Grid.Column="0"
					Grid.Row="3"
					Content="nCr" />
			<Button Grid.Column="1"
					Grid.Row="3"
					Content="nPr" />
			<Button Grid.Column="0"
					Grid.Row="4"
					Content="min" />
			<Button Grid.Column="1"
					Grid.Row="4"
					Content="max" />
			<Button Grid.Column="0"
					Grid.Row="5"
					Content="gcd" />
			<Button Grid.Column="1"
					Grid.Row="5"
					Content="lcm" />
		</Grid>



	</Grid>

</Window>
