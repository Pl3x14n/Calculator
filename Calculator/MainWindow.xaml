<Window x:Class="Calculator.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:Calculator"
		mc:Ignorable="d"
		Title="MainWindow"
		Height="137"
		Width="519">
	<Grid Margin="0,0,2,-1">
		<TextBox x:Name="tbInfix"
				 HorizontalAlignment="Left"
				 Height="23"
				 Margin="68,30,0,0"
				 TextWrapping="Wrap"
				 Text="1 + 2 * 3 - 4"
				 VerticalAlignment="Top"
				 Width="295" />
		<Label x:Name="lbInfix"
			   Content="Infix"
			   HorizontalAlignment="Left"
			   Margin="18,27,0,0"
			   VerticalAlignment="Top" />
		<TextBox x:Name="tbPostfix"
				 HorizontalAlignment="Left"
				 Height="23"
				 Margin="68,68,0,0"
				 TextWrapping="Wrap"
				 VerticalAlignment="Top"
				 Width="295"
				 IsReadOnly="True" />
		<Label x:Name="lbPostfix"
			   Content="Postfix"
			   HorizontalAlignment="Left"
			   Margin="18,65,0,0"
			   VerticalAlignment="Top" />
		<Button x:Name="btnConvert"
				Content="Convert"
				HorizontalAlignment="Left"
				Margin="396,30,0,0"
				VerticalAlignment="Top"
				Width="104"
				Height="61"
				Click="btnConvert_Click" />

	</Grid>
</Window>
